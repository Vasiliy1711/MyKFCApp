<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_red"
    tools:context=".ui.screens.act_main.ActMain">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/oval_length"
        android:layout_marginTop="64dp"
        android:layout_marginRight="@dimen/oval_length"
        android:layout_marginBottom="72dp"
        android:background="@drawable/circle_white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/view_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/kfc1" />

        <TextView
            android:id="@+id/textViewEmail"
            style="@style/TVReg.L.ETName"
            android:layout_marginBottom="4dp"
            android:text="@string/email" />

        <EditText
            android:id="@+id/ediTextEmail"
            style="@style/ETCommon"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/textViewPassword"
            style="@style/TVReg.L.ETName"
            android:layout_marginBottom="4dp"
            android:text="@string/password" />


        <EditText
            android:id="@+id/ediTextPassword"
            style="@style/ETCommon"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/textViewForgot"
            android:layout_width="@dimen/view_width"
            android:layout_height="@dimen/text_view_height"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/exo_reg"
            android:text="@string/forgot_your_password"
            android:textAlignment="center"
            android:textColor="@color/color_red"
            android:textSize="@dimen/size_l" />

        <TextView
            android:id="@+id/buttonEnter"
            style="@style/LRButton"
            android:layout_marginBottom="120dp"
            android:text="@string/entry" />

    </LinearLayout>

    <TextView
        android:id="@+id/registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/exo_reg"
        android:text="@string/registration"
        android:textColor="@android:color/white"
        android:textSize="@dimen/size_l" />


</RelativeLayout>